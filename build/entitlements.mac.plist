<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow app to run unsigned code (for Electron) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow app to use JIT compilation -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow app to access network (for server functionality) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow app to listen on network (for server functionality) -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow app to access camera (for WebRTC) -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Allow app to access microphone (for WebRTC) -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Allow app to access files selected by user -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Disable library validation to allow loading of unsigned libraries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow DYLD environment variables (needed for some Electron features) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>