{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist/main",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "electron"],
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo/electron.tsbuildinfo"
  },
  "include": ["electron/**/*", "src/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "src/static/**/*"]
}