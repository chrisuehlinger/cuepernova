<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Cuepernova Control Panel</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #1a1a1a;
      color: white;
      padding: 20px;
      font-size: 18px;
    }

    header {
      text-align: center;
      margin-bottom: 40px;
    }

    header h1 {
      font-size: 3em;
      font-weight: 300;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    main {
      max-width: 1200px;
      margin: 0 auto;
    }

    section {
      background: #2a2a2a;
      border-radius: 10px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.3);
    }

    section h2 {
      font-size: 2em;
      margin-bottom: 20px;
      color: #fff;
      border-bottom: 2px solid #444;
      padding-bottom: 10px;
    }

    /* Button styles */
    button {
      font-size: 1.2em;
      padding: 20px 30px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      transition: all 0.2s ease;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      min-width: 150px;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    button:active {
      transform: translateY(0);
    }

    button .material-icons {
      font-size: 1.5em;
    }

    /* Emergency controls */
    .button-row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .btn-emergency {
      background: #d32f2f;
      color: white;
      font-size: 1.5em;
      padding: 30px 40px;
      flex: 1;
      min-width: 200px;
    }

    .btn-emergency:hover {
      background: #b71c1c;
    }

    .btn-warning {
      background: #f57c00;
      color: white;
      font-size: 1.3em;
      padding: 25px 35px;
      flex: 1;
      min-width: 180px;
    }

    .btn-warning:hover {
      background: #e65100;
    }

    .btn-info {
      background: #0288d1;
      color: white;
      font-size: 1.3em;
      padding: 25px 35px;
      flex: 1;
      min-width: 180px;
    }

    .btn-info:hover {
      background: #01579b;
    }

    /* Basic controls */
    .button-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }

    .btn-cue {
      background: #4caf50;
      color: white;
      font-size: 1.2em;
    }

    .btn-cue:hover {
      background: #388e3c;
    }

    /* Custom cues */
    .custom-cues h2 {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-reload {
      background: transparent;
      border: 1px solid #667eea;
      color: #667eea;
      padding: 0.25rem;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.3s;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-left: auto;
    }

    .btn-reload:hover {
      background: #667eea;
      color: white;
    }

    .btn-reload .material-icons {
      font-size: 18px;
    }

    .manual-cue {
      display: flex;
      gap: 20px;
      margin-bottom: 30px;
    }

    #manualcue {
      flex: 1;
      padding: 20px;
      font-size: 1.2em;
      background: #333;
      color: white;
      border: 2px solid #555;
      border-radius: 8px;
      font-family: 'Courier New', monospace;
    }

    #manualcue:focus {
      outline: none;
      border-color: #4caf50;
    }

    .btn-primary {
      background: #4caf50;
      color: white;
    }

    .btn-primary:hover {
      background: #388e3c;
    }

    /* Cue list */
    .cue-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .cue-item {
      display: flex;
      align-items: center;
      gap: 20px;
      padding: 15px;
      background: #333;
      border-radius: 8px;
      border: 2px solid #444;
    }

    .cue-item:hover {
      border-color: #666;
    }

    .cue-name {
      flex: 1;
      font-size: 1.2em;
      font-weight: bold;
    }

    .cue-address {
      font-family: 'Courier New', monospace;
      color: #888;
      font-size: 0.9em;
    }

    .btn-go {
      background: #4caf50;
      color: white;
      padding: 15px 30px;
      font-size: 1.2em;
      min-width: 100px;
    }

    .btn-go:hover {
      background: #388e3c;
    }

    /* Status */
    .status-indicator {
      display: flex;
      align-items: center;
      gap: 15px;
      font-size: 1.3em;
      padding: 20px;
      background: #333;
      border-radius: 8px;
      border: 2px solid #444;
    }

    .status-indicator.connected {
      border-color: #4caf50;
      color: #4caf50;
    }

    .status-indicator.connected .material-icons {
      color: #4caf50;
    }

    .status-indicator .material-icons {
      font-size: 1.5em;
      color: #f44336;
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        padding: 10px;
        font-size: 16px;
      }
      
      header h1 {
        font-size: 2em;
      }
      
      section {
        padding: 20px;
      }
      
      button {
        padding: 15px 20px;
        font-size: 1em;
        min-width: 120px;
      }
      
      .btn-emergency {
        padding: 20px 25px;
        font-size: 1.2em;
      }
      
      .manual-cue {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Cuepernova Control Panel</h1>
  </header>
  
  <main>
    <section class="emergency-controls">
      <h2>Emergency Controls</h2>
      <div class="button-row">
        <button id="bail" class="btn-emergency">
          <i class="material-icons">cancel</i>
          <span>BAIL!</span>
        </button>
        <button id="refresh" class="btn-warning">
          <i class="material-icons">refresh</i>
          <span>REFRESH ALL</span>
        </button>
        <button id="debug" class="btn-info">
          <i class="material-icons">bug_report</i>
          <span>DEBUG</span>
        </button>
      </div>
    </section>
    
    <section class="basic-controls">
      <h2>Screen Controls</h2>
      <div class="button-grid">
        <button class="btn-cue" data-cue="/cuepernova/cuestation/clearScreen">
          <span>CLEAR</span>
        </button>
        <button class="btn-cue" data-cue="/cuepernova/cuestation/fadeScreen" data-args="1000">
          <span>FADE OUT (1s)</span>
        </button>
      </div>
    </section>
    
    <section class="custom-cues">
      <h2>Custom Cues 
        <button id="reload-cues" class="btn-reload" title="Reload cues from cues.json">
          <i class="material-icons">refresh</i>
        </button>
      </h2>
      <div class="manual-cue">
        <input id="manualcue" type="text" placeholder="e.g., /cuepernova/cuestation/showScreen/mycueball arg1 arg2" />
        <button id="callmanual" class="btn-primary">
          <i class="material-icons">send</i>
          <span>SEND</span>
        </button>
      </div>
      
      <div id="cue-list" class="cue-list">
        <!-- Dynamic cue list will be populated here -->
      </div>
    </section>
    
    <section class="status">
      <h2>Status</h2>
      <div id="connection-status" class="status-indicator">
        <i class="material-icons">wifi_off</i>
        <span>Disconnected</span>
      </div>
    </section>
  </main>
  
</body>
</html>